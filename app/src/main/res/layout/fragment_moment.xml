<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/moment_tab_layout_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/moment_tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:tabIndicatorColor="#000000"
            app:tabSelectedTextColor="#148bec"
            app:tabTextColor="#515050"/>

    </LinearLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/moment_view_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/moment_tab_layout_linear"/>

</RelativeLayout>
